.SchemaReport {
  form {
    display: block;
  }

  iframe {
    display: none;
    padding: 0;
    height: calc(100vh - 195px);
    border-width: 0 0 1px 0;
    border-style: solid;
    border-color: #ddd;
    overflow: auto;
    width: 100%;
  }

  .app-form-buttons {
    display: flex;
  }

  button[name="submit"] {
    display: block;
  }

  button[name="printing"] {
    display: block;
  }

  button[name="return"] {
    display: none;
  }

  button[name="printer"] {
    display: none;
  }

  &.submitting {
    form {
      display: none;
    }

    iframe {
      display: block;
    }

    button[name="submit"] {
      display: none;
    }

    button[name="printing"] {
      display: none;
    }

    button[name="return"] {
      display: block;
    }

    button[name="printer"] {
      display: block;
    }
  }
}

.DashboardLayout--modal {
  .SchemaReport {
    iframe {
      padding: 10px;
      height: calc(100vh - 95px);
    }
  }
}